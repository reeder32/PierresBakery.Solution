@{
  Layout = "_Layout";
}
@model PierresBakery.Models.Treat
@using PierresBakery.Models

<h2>Edit</h2>

<h4>Edit this Treat: @Html.DisplayFor(model => model.Name)</h4>
<div class="form-group col-10">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)
    @Html.HiddenFor(model => model.UserId)
    <div class="form-group">
      @Html.LabelFor(model => model.Name)
      @Html.EditorFor(model => model.Name)
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Description)
      @Html.EditorFor(model => model.Description)
    </div>

    <input type="submit" value="Save & Exit" class="btn btn-primary" />
  }
  <hr>
  <h4>Add/Remove Flavor Profiles</h4>
  @foreach (Flavor flavor in ViewBag.userFlavors)
  {
    <div class="form-group">
      @Html.Label(@flavor.Name)
      @Html.ActionLink("-", "DeleteFlavor", new { TreatId = Model.TreatId, FlavorId = flavor.FlavorId }, new {@class="btn btn-danger"})

    </div>
  }
   @foreach (Flavor flavor in ViewBag.userNonFlavors)
  {
    <div class="form-group">
      @Html.Label(@flavor.Name)
      @Html.ActionLink("+", "AddFlavor", new { TreatId = Model.TreatId, FlavorId = flavor.FlavorId }, new {@class="btn btn-success"})

    </div>
  }
  

</div>