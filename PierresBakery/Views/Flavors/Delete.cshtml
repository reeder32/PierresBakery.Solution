@{
  Layout = "_Layout";
}
@model PierresBakery.Models.Flavor

<h2>Delete Flavor @Html.DisplayFor(model => model.Name)</h2>

<p>Description: @Html.DisplayFor(model=>model.Description)</p>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  <input type="submit" value="Delete" class="btn btn-danger" />
}
</br>
@Html.ActionLink("Cancel", "Details", new {id = Model.FlavorId}, new {@class="btn btn-warning"})